#!/bin/sh

packages="extra-cmake-modules-git kf5-polkit-qt-git qtconfiguration-git
          qt-accountsservice-addon-git hawaii-wallpapers-git
          hawaii-icon-themes-git hawaii-fluid-git hawaii-greenisland-git
          hawaii-shell-git hawaii-system-preferences-git
          hawaii-terminal-git hawaii-archiver-git eyesight-git
          swordfish-git hawaii-meta-git sddm-qt5-git"

for pkg in $packages; do
	file=${pkg}-v*-1-x86_64.pkg.tar.xz

	[ -f ~/chroot/root/repo/${file} ] && continue

	pushd $pkg

	echo "===> ${pkg}"

	[ ! -f ${file} ] && ../build

	if [ ! -f $file ]; then
		echo "$file doesn't exist!"
		exit 1
	fi

	cp $file ~/chroot/root/repo
	cd ~/chroot/root/repo
	repo-add hawaii.db.tar.gz $file

	popd
done
