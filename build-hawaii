#!/bin/sh

packages="qtconfiguration-git qtaccountsservice-git
          hawaii-wallpapers-git hawaii-icon-themes-git hawaii-fluid-git
          hawaii-greenisland-git hawaii-widget-styles-git hawaii-shell-git
          hawaii-system-preferences-git hawaii-terminal-git
          hawaii-archiver-git hawaii-meta-git
          eyesight-git swordfish-git"

for pkg in $packages; do
	file=${pkg}-v*-1-x86_64.pkg.tar.xz

	[ "${pkg}" = "hawaii-archiver-git" ] && continue

	[ -f ~/chroot/root/repo/${file} ] && continue

	pushd $pkg

	echo "===> ${pkg}"

	[ ! -f ${file} ] && ../build

	if [ ! -f $file ]; then
		echo "$file doesn't exist!"
		exit 1
	fi

	cp $file ~/chroot/root/repo
	cd ~/chroot/root/repo
	repo-add hawaii.db.tar.gz $file

	popd
done
