# Maintainer: Pier Luigi Fiorini <pierluigi.fiorini@gmail.com>

pkgname=hawaii-swordfish-git
pkgver=20130520
pkgrel=1
pkgdesc="Hawaii: File manager"
arch=('i686' 'x86_64')
url="http://www.maui-project.org"
license=('GPL')
depends=('hawaii-vibe-git')
makedepends=('git' 'cmake')
source=()
md5sums=()

_gitroot="git://github.com/hawaii-desktop/swordfish.git"
_gitname=swordfish
_gitbranch=gio

build() {
	if [ ! -d "${_gitname}" ]; then
		git clone ${_gitroot} ${_gitname} && cd ${_gitname}
	else
		cd ${_gitname} && git reset --hard && git pull origin && git clean -dfx
	fi

	git checkout $_gitbranch

	msg "GIT checkout done."

	export PATH=/opt/hawaiide/bin:$PATH
	export PKG_CONFIG_PATH=/opt/hawaiide/lib/pkgconfig

	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib \
		-DCMAKE_INSTALL_PLUGINSDIR=/usr/lib/hawaii/plugins \
		-DCMAKE_INSTALL_QMLDIR=/usr/lib/hawaii/qml \
		-DCMAKE_BUILD_TYPE=Release ..
	make
}

package() {
	cd "${_gitname}/build"
	make DESTDIR="${pkgdir}" install

	# Remove D-Bus service which conflicts with nautilus
	rm -f $pkgdir/usr/share/dbus-1/services/org.freedesktop.FileManager1.service
}
