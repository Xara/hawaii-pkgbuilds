# Maintainer: Sergio Correia <sergio.correia@uece.net>

pkgname=qt5-qt3d-git
pkgver=20121111
pkgrel=1
pkgdesc="Qt 5: qt3d module"
groups=('qt5' 'qt5-addons')
arch=('i686' 'x86_64')
url="https://qt.gitorious.org/qt/qt3d"
license=('LGPL')
depends=('qt5-qtbase-git' 'qt5-qtdeclarative-git')
makedepends=('git')
options=('!libtool')
source=()
md5sums=()

_gitroot="git://gitorious.org/qt/qt3d.git"
_gitname=qt5-qt3d

build() {
	if [ ! -d "${_gitname}" ]; then
		git clone --depth 1 ${_gitroot} ${_gitname} && cd ${_gitname}
	else
		cd ${_gitname} && git reset --hard && git pull origin && git clean -dfx
	fi

	msg "GIT checkout done."

	/opt/qt5/bin/qmake
	make
}

package() {
	cd "${_gitname}"

	make INSTALL_ROOT="${pkgdir}" install
}
