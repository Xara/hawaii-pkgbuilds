# Maintainer: Pier Luigi Fiorini <pierluigi.fiorini@gmail.com>

pkgname=kde-solid-git
pkgver=0.0.0
pkgrel=1
pkgdesc="Hawaii: Solid from KDE"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('LGPL')
depends=('qt5-base-git' 'udisks2')
makedepends=('cmake' 'extra-cmake-modules-git' 'git' 'qt5-svg-git')
replaces=('kde-solid-for-hawaii-git')
_gitroot="git://github.com/hawaii-desktop/solid.git"
_gitname=solid
_gitbranch=hawaii
source=(${_gitname}::${_gitroot}#branch=${_gitbranch})
md5sums=('SKIP')

pkgver() {
	cd ${srcdir}/${_gitname}
	echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
	cd ${srcdir}/${_gitname}

	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/opt/hawaiide \
		-DLIB_INSTALL_DIR=/opt/hawaiide/lib \
		-DCMAKE_BUILD_TYPE=Release .. \
		-DWITH_SOLID_UDISKS2=ON
	make
}

package() {
	cd ${srcdir}/${_gitname}/build
	make DESTDIR="${pkgdir}" install
}
