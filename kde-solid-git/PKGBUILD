# Maintainer: Pier Luigi Fiorini <pierluigi.fiorini@gmail.com>

pkgname=kde-solid-git
pkgver=20130524
pkgrel=1
pkgdesc="Hawaii: Solid from KDE"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('LGPL')
depends=('qt5-base-git' 'udisks2')
makedepends=('cmake-unstable' 'extra-cmake-modules-git' 'git' 'qt5-svg-git')
replaces=('kde-solid-for-hawaii-git')
source=()
md5sums=()

_gitroot="git://github.com/hawaii-desktop/solid.git"
_gitname=solid
_gitbranch=hawaii

build() {
	if [ ! -d "${_gitname}" ]; then
		git clone ${_gitroot} ${_gitname} && cd ${_gitname}
	else
		cd ${_gitname} && git reset --hard && git pull origin && git clean -dfx
	fi

	git checkout $_gitbranch

	msg "GIT checkout done."

	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/opt/hawaiide \
		-DLIB_INSTALL_DIR=/opt/hawaiide/lib \
		-DCMAKE_BUILD_TYPE=Release .. \
		-DWITH_SOLID_UDISKS2=ON
	make
}

package() {
	cd "${_gitname}/build"
	make DESTDIR="${pkgdir}" install
}
