# Maintainer: Pier Luigi Fiorini <pierluigi.fiorini@gmail.com>

pkgname=qt5-qtdesktopcomponents-git
pkgver=20120528
pkgrel=1
pkgdesc="QtQuick controls for desktop"
arch=('i686' 'x86_64')
url="http://qt-project.org/wiki/QtDesktopComponents"
license=('LGPL')
depends=('qt5-qtdeclarative-git')
makedepends=('gcc' 'git')
source=()
md5sums=()

_gitroot="git://gitorious.org/qtplayground/qtdesktopcomponents.git"
_gitname=qt5-qtdesktopcomponents
_gitbranch=dev

build() {
	if [ ! -d "${_gitname}" ]; then
		git clone -b ${_gitbranch} --depth 1 ${_gitroot} ${_gitname} && cd ${_gitname}
	else
		cd ${_gitname} && git reset --hard && git pull origin && git clean -dfx
	fi

	msg "GIT checkout done."

	qmake
	make
}

package() {
	cd "${srcdir}/${_gitname}-build"
	make INSTALL_ROOT="${pkgdir}" install
}
