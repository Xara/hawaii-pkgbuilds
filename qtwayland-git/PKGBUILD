# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=qtwayland-git
pkgver=0.0.0
pkgrel=1
pkgdesc="A cross-platform application and UI framework (QtWayland)"
arch=('i686' 'x86_64')
url="http://qt-project.org/"
license=('GPL3' 'LGPL')
depends=('qtbase-git' 'libxcomposite' 'wayland')
makedepends=('git')
options=('!libtool')
#source=(git://gitorious.org/qt/qtwayland.git#branch=dev)
source=(git://github.com/plfiorini/qtwayland.git#branch=hawaii-stable)
#source=(git://github.com/plfiorini/qtwayland.git#branch=cherry)
md5sums=('SKIP')

pkgver() {
  cd qtwayland
  git describe --always | sed 's|-|.|g'
}

build() {
  cd qtwayland
  #/opt/qt-git/bin/qmake CONFIG+=wayland-compositor
  /opt/qt-git/bin/qmake
  make
}

package() {
  cd qtwayland
  make INSTALL_ROOT="${pkgdir}" install
}
