# Maintainer: speps <speps at aur dot archlinux dot org>

_name=qupzilla
pkgname=$_name-qt5
pkgver=1.4.3
pkgrel=1
pkgdesc="Cross-platform QtWebKit browser. Qt5 version."
arch=(i686 x86_64)
url="http://www.qupzilla.com/"
license=('GPL3')
depends=('qt5-webkit' 'qt5-script' 'hunspell' 'desktop-file-utils')
optdepends=('bash-completion: bash completion support')
provides=("$_name")
conflicts=("$_name")
install="$_name.install"
source=("$_name-$pkgver.tar.gz::https://github.com/QupZilla/$_name/tarball/v$pkgver")
md5sums=('20187fcce11dbba876e1ee7dc5e32583')

build() {
  cd "$srcdir/QupZilla-$_name-"*

  # enable Wayland support
  export NO_X11=true

  # enable webgl support
  export USE_WEBGL=true

  qmake QUPZILLA_PREFIX=/usr/
  make
}

package() {
  cd "$srcdir/QupZilla-$_name-"*
  make INSTALL_ROOT="$pkgdir/" install

  # zsh completion
  install -Dm644 linux/completion/zsh_completion.sh \
    "$pkgdir/usr/share/zsh/site-functions/_$_name"
}

# vim:set ts=2 sw=2 et:
