# Maintainer: Pier Luigi Fiorini <pierluigi.fiorini@gmail.com>

pkgname=qt5-sensors-git
pkgver=0.0.0
pkgrel=1
pkgdesc="A cross-platform application and UI framework (QtSensors)"
groups=('qt' 'qt5')
arch=('i686' 'x86_64')
url="http://qt-project.org/"
license=('GPL3' 'LGPL')
depends=('qt5-base-git')
replaces=('qt5-qtsensors-git')
provides=('qt5-sensors')
conflicts=('qt5-sensors')
makedepends=('git')
options=('!libtool')
_gitroot="git://gitorious.org/qt/qtsensors.git"
_gitname="qt5-sensors"
_gitbranch=stable
source=(${_gitname}::${_gitroot}#branch=${_gitbranch})
md5sums=('SKIP')

pkgver() {
	cd ${srcdir}/${_gitname}
	echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
	cd ${srcdir}/${_gitname}
	qmake
	make
}

package() {
	cd ${srcdir}/${_gitname}
	make INSTALL_ROOT="${pkgdir}" install
}
