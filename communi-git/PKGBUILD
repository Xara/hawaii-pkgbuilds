# Maintainer: Pier Luigi Fiorini <pierluigi.fiorini@gmail.com>

pkgname=communi-git
pkgver=0.0.0
pkgrel=1
pkgdesc="A cross-platform IRC framework written with Qt"
arch=('i686' 'x86_64')
url="https://github.com/communi/communi"
license=('LGPL2.1')
depends=('qt5-base')
makedepends=('gcc' 'git')
source=('git://github.com/communi/communi.git')
md5sums=('SKIP')

pkgver() {
	cd communi
	git describe --always | sed 's|-|.|g'
}

build() {
	cd communi

	./configure \
		-prefix /opt/communi-git \
		-headerdir /opt/communi-git/include \
		-featuredir /opt/communi-git/lib/qt/mkspecs/features
	make
}

package() {
	cd communi
	make INSTALL_ROOT="${pkgdir}" install
}
