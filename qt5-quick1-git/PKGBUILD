# Maintainer: Pier Luigi Fiorini <pierluigi.fiorini@gmail.com>

pkgname=qt5-quick1-git
pkgver=0.0.0
pkgrel=1
pkgdesc="A cross-platform application and UI framework (QtDeclarative)"
groups=('qt' 'qt5')
arch=('i686' 'x86_64')
url="http://qt-project.org/"
license=('GPL3' 'LGPL')
depends=('qt5-base-git' 'qt5-script-git')
replaces=('qt5-qtquick1-git')
provides=('qt5-quick1')
conflicts=('qt5-quick1')
makedepends=('gcc' 'git')
_gitroot="git://gitorious.org/qt/qtquick1.git"
_gitname="qt5-quick1"
_gitbranch=stable
source=(${_gitname}::${_gitroot}#branch=${_gitbranch})
md5sums=('SKIP')

pkgver() {
	cd ${srcdir}/${_gitname}
	echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
	cd ${srcdir}/${_gitname}
	qmake
	make
}

package() {
	cd ${srcdir}/${_gitname}
	make INSTALL_ROOT="${pkgdir}" install
}
