# Maintainer: Pier Luigi Fiorini <pierluigi.fiorini@gmail.com>

pkgname=qt5-tools-git
pkgver=0.0.0
pkgrel=1
pkgdesc="A cross-platform application and UI framework (Development Tools, QtHelp)"
groups=('qt' 'qt5')
arch=('i686' 'x86_64')
url="http://qt-project.org/"
license=('GPL3' 'LGPL')
#depends=('qt5-base-git' 'qt5-xmlpatterns-git' 'qt5-declarative-git' 'qt5-jsbackend-git' 'qt5-webkit-git')
depends=('qt5-base-git' 'qt5-xmlpatterns-git' 'qt5-declarative-git' 'qt5-jsbackend-git')
makedepends=('git')
replaces=('qt5-qttools-git')
provides=('qt5-tools')
conflicts=('qt5-tools')
options=('!libtool')
_gitroot="git://gitorious.org/qt/qttools.git"
_gitname="qt5-tools"
_gitbranch=stable
source=(${_gitname}::${_gitroot}#branch=${_gitbranch})
md5sums=('SKIP')

pkgver() {
	cd ${srcdir}/${_gitname}
	echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
	cd ${srcdir}/${_gitname}
	qmake
	make
}

package() {
	cd ${srcdir}/${_gitname}
	make INSTALL_ROOT="${pkgdir}" install
}
